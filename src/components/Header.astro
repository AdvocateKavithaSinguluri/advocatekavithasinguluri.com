---
const currentPath = new URL(Astro.request.url).pathname
const normalizedPath = currentPath.endsWith('/') ? currentPath.slice(0, -1) : currentPath
---

<header class="fixed z-50 w-full bg-black shadow-sm transition-all duration-300">
	<!-- Add contact info bar -->
	<div class="bg-zinc-800 py-2 text-gray-200">
		<div class="mx-auto flex max-w-7xl justify-end space-x-6 px-4 text-xs sm:px-6 md:text-sm">
			<a href="tel:+919876543210" class="flex items-center hover:text-yellow-400">
				<svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
					></path>
				</svg>
				<b>+91 9941323016</b>
			</a>
			<a href="mailto:contact@advocatekavithasinguluri.com" class="flex items-center hover:text-yellow-400">
				<svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
				</svg>
				<b>advocatekavitha2016@gmail.com</b>
			</a>
		</div>
	</div>
	<nav class="mx-auto max-w-7xl px-4 sm:px-6">
		<input type="checkbox" id="nav-toggle" class="nav-toggle" />

		<div class="flex items-center justify-between py-4">
			<!-- Logo section -->
			<div class="flex justify-start lg:w-0 lg:flex-1">
				<a href="/" class="group flex items-center transition-opacity hover:opacity-90">
					<img class="h-12 w-auto sm:h-14" src={'/assets/logo.svg'} alt="Kavitha Singuluri Law Firm" />
					<div class="ml-4 text-left">
						<h1 class="font-serif text-2xl text-gray-200 transition-colors group-hover:text-yellow-400">Kavitha Singuluri</h1>
						<p class="text-base text-gray-400">Advocate & Associates</p>
					</div>
				</a>
			</div>

			<!-- Hamburger menu -->
			<label for="nav-toggle" class="nav-toggle-label md:hidden">
				<span class="sr-only">Open navigation menu</span>
				<span></span>
				<span></span>
				<span></span>
			</label>
			<!-- Desktop Navigation -->
			<div class="hidden space-x-12 md:flex">
				<a href="/" class={`nav-link ${normalizedPath === '' ? 'active' : ''}`}>Home</a>
				<a href="/associates" class={`nav-link ${normalizedPath === '/associates' ? 'active' : ''}`}>Associates</a>
				<a href="/practice-areas" class={`nav-link ${normalizedPath === '/practice-areas' ? 'active' : ''}`}>Practice Areas</a>
				<a href="/blog" class={`nav-link ${normalizedPath.startsWith('/blog') ? 'active' : ''}`}>Blog</a>
				<a href="/contact" class={`nav-link ${normalizedPath === '/contact' ? 'active' : ''}`}>Contact</a>
			</div>
		</div>

		<!-- Mobile Navigation -->
		<div class="nav-mobile">
			<a href="/" class={`nav-link-mobile ${normalizedPath === '/' ? 'active' : ''}`}>Home</a>
			<a href="/associates" class={`nav-link-mobile ${normalizedPath === '/associates' ? 'active' : ''}`}>Associates</a>
			<a href="/practice-areas" class={`nav-link-mobile ${normalizedPath === '/practice-areas' ? 'active' : ''}`}>Practice Areas</a>
			<a href="/blog" class={`nav-link-mobile ${normalizedPath === '/blog' ? 'active' : ''}`}>Blog</a>
			<a href="/contact" class={`nav-link-mobile ${normalizedPath === '/contact' ? 'active' : ''}`}>Contact Us</a>
		</div>
	</nav>
</header>

<style>
	.nav-toggle {
		display: none;
	}

	.nav-toggle-label {
		cursor: pointer;
		padding: 1rem;
		position: relative;
	}

	.nav-toggle-label span {
		display: block;
		width: 25px;
		height: 2px;
		margin: 6px 0;
		transition: all 0.4s ease-in-out;
		@apply bg-gray-400;
	}

	.nav-mobile {
		display: none;
		padding: 0.5rem 0;
		@apply border-t border-gray-200;
	}

	.nav-link {
		@apply relative py-2 text-lg font-medium text-gray-400 transition-colors duration-300 hover:text-yellow-400;
	}

	.nav-link::after {
		content: '';
		@apply absolute bottom-0 left-0 h-0.5 w-0 bg-yellow-400 transition-all duration-300;
	}

	.nav-link:hover::after {
		@apply w-full;
	}

	.nav-link.active {
		@apply text-yellow-400;
	}

	.nav-link.active::after {
		@apply w-full;
	}

	.nav-link-mobile {
		@apply block border-l-4 border-transparent px-4 py-3 text-gray-400 transition-colors duration-300 hover:border-yellow-400 hover:bg-gray-50 hover:text-yellow-400;
	}

	.nav-link-mobile.active {
		@apply border-l-4 border-yellow-400 bg-gray-50 text-yellow-400;
	}

	.nav-toggle:checked ~ .nav-mobile {
		display: flex;
		flex-direction: column;
	}

	.nav-toggle:checked + div .nav-toggle-label span:nth-child(1) {
		transform: rotate(45deg) translate(6px, 6px);
	}

	.nav-toggle:checked + div .nav-toggle-label span:nth-child(2) {
		opacity: 0;
	}

	.nav-toggle:checked + div .nav-toggle-label span:nth-child(3) {
		transform: rotate(-45deg) translate(7px, -7px);
	}

	@media (min-width: 768px) {
		.nav-mobile {
			display: none !important;
		}
	}
</style>
