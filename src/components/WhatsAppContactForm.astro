<section class="p-4 sm:p-10">
	<h2 class="mb-4 border-b border-gray-400 pb-4 font-serif text-3xl font-light text-gray-800 sm:mb-6 sm:text-4xl">
		Send a query
	</h2>
	<div class="space-y-4 sm:space-y-8">
		<form id="legalForm" class="space-y-4 sm:space-y-6">
			<div class="space-y-3 sm:space-y-4">
				<!-- Name -->
				<div class="group flex flex-col items-start sm:flex-row sm:space-x-4">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="h-6 w-6 shrink-0 text-gray-600 group-hover:text-gray-800 sm:mt-3"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
					</svg>
					<div class="w-full flex-1">
						<input
							type="text"
							id="name"
							name="name"
							placeholder="Your Name"
							required
							class="w-full rounded-lg border border-gray-300 p-3 focus:border-transparent focus:ring-1"
						/>
					</div>
				</div>

				<!-- Phone -->
				<div class="group flex flex-col items-start sm:flex-row sm:space-x-4">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						class="h-6 w-6 shrink-0 text-gray-600 group-hover:text-gray-800 sm:mt-3"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1c-8.284 0-15-6.716-15-15V5z"
						></path>
					</svg>
					<div class="w-full flex-1">
						<input
							type="tel"
							id="phone"
							name="phone"
							placeholder="Phone Number"
							required
							class="w-full rounded-lg border border-gray-300 p-3 focus:border-transparent focus:ring-1"
						/>
					</div>
				</div>
			</div>

			<!-- Practice Area -->
			<div class="group flex flex-col items-start sm:flex-row sm:space-x-4">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-6 w-6 shrink-0 text-gray-600 group-hover:text-gray-800 sm:mt-3"
					fill="none"
					viewBox="0 0 24 24"
					stroke="currentColor"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M3 6l9 6 9-6M3 6v12a2 2 0 002 2h14a2 2 0 002-2V6m-2 0H5a2 2 0 00-2 2v12a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2z"
					></path>
				</svg>
				<div class="w-full flex-1">
					<select
						id="practiceArea"
						name="practiceArea"
						required
						class="w-full rounded-lg border border-gray-300 p-3 focus:border-transparent focus:ring-1"
					>
						<option value="">Select Practice Area</option>
						<option value="banking">Banking and Finance Laws</option>
						<option value="bankruptcy">Insolvency and Bankruptcy Laws</option>
						<option value="arbitration">Arbitration</option>
						<option value="recovery">Recovery Suits & Executions</option>
						<option value="property">Property Matters</option>
						<option value="family">Family Law</option>
						<option value="consumer">Consumer Dispute Cases</option>
						<option value="others">Others</option>
					</select>
				</div>
			</div>

			<!-- Case Description -->
			<div class="group flex flex-col items-start sm:flex-row sm:space-x-4">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					class="h-6 w-6 shrink-0 text-gray-600 group-hover:text-gray-800 sm:mt-3"
					fill="none"
					viewBox="0 0 24 24"
					stroke="currentColor"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
					></path>
				</svg>
				<div class="w-full flex-1">
					<textarea
						id="caseDescription"
						name="caseDescription"
						rows="4"
						required
						placeholder="Please provide a brief overview of your legal matter..."
						class="w-full rounded-lg border border-gray-300 p-3 focus:border-transparent focus:ring-1"></textarea>
				</div>
			</div>

			<button type="submit" id="whatsappButton" class="w-full transform transition-all duration-300 hover:scale-[1.02]">
				<div class="rounded-lg border-2 border-[#25D366] bg-white p-4 hover:shadow-lg sm:p-6">
					<div class="flex items-center justify-between">
						<div class="flex items-center space-x-4">
							<div class="rounded-full bg-[#25D366] p-3">
								<svg class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
									<path
										d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"
									>
									</path>
								</svg>
							</div>
							<div>
								<h3 class="font-serif text-xl font-medium text-gray-900 sm:text-2xl">Chat on WhatsApp</h3>
								<p class="text-sm font-light text-gray-900 sm:text-base">Send your case details directly</p>
							</div>
						</div>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="h-6 w-6 text-[#25D366]"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
						</svg>
					</div>
				</div>
			</button>
		</form>
	</div>
</section>

<script>
	const form = document.getElementById('legalForm') as HTMLFormElement
	const whatsappButton = document.getElementById('whatsappButton') as HTMLButtonElement

	if (form && whatsappButton) {
		const inputs = form.querySelectorAll<HTMLInputElement | HTMLSelectElement | HTMLTextAreaElement>(
			'input, select, textarea'
		)

		// Create error message elements for each input
		inputs.forEach((input) => {
			const errorDiv = document.createElement('div')
			errorDiv.className = 'text-red-500 text-sm mt-1 hidden'
			errorDiv.id = `${input.id}-error`

			// append right under input wrapper (not next to icon)
			input.parentElement?.appendChild(errorDiv)

			input.addEventListener('focus', () => {
				input.classList.add('ring-2', 'ring-[#25D366]', 'border-transparent')
			})
			input.addEventListener('blur', () => {
				input.classList.remove('ring-2', 'ring-[#25D366]', 'border-transparent')
			})
		})

		const validateField = (input: HTMLInputElement | HTMLSelectElement | HTMLTextAreaElement) => {
			const errorDiv = document.getElementById(`${input.id}-error`)
			if (!errorDiv) return false

			const value = input.value.trim()
			let isValid = true
			let errorMessage = ''

			if (value === '') {
				isValid = false
				errorMessage = 'This field is required'
			} else if (input.type === 'tel' && !/^\+?[\d\s-]{8,}$/.test(value)) {
				isValid = false
				errorMessage = 'Please enter a valid phone number'
			}

			errorDiv.textContent = errorMessage
			errorDiv.classList.toggle('hidden', isValid)
			input.classList.toggle('border-red-500', !isValid)

			return isValid
		}

		form.addEventListener('submit', (e) => {
			e.preventDefault()
			const isFormValid = Array.from(inputs).every((input) => validateField(input))

			if (isFormValid) {
				const message = `Hi Advocate Kavitha,

I would like to discuss my legal matter with you.

Name: ${(form.name as unknown as HTMLInputElement).value.trim()}
Phone: ${form.phone.value.trim()}
Practice Area: ${form.practiceArea.value}

Case Details: ${form.caseDescription.value.trim()}`
				window.open(`https://wa.me/919941323016?text=${encodeURIComponent(message)}`, '_blank', 'noopener,noreferrer')
			}
		})

		// Clear error messages on input
		inputs.forEach((input) => {
			input.addEventListener('input', () => {
				const errorDiv = document.getElementById(`${input.id}-error`)
				if (errorDiv) {
					errorDiv.classList.add('hidden')
					input.classList.remove('border-red-500')
				}
			})
		})
	}
</script>
